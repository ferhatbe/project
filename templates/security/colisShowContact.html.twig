{% extends 'base.html.twig' %}

{% block body %}

    <link rel="stylesheet" href="{{ asset('css/colisContact.css') }}">

    <div class="container">
    <!------ Include the above in your HEAD tag ---------->
    <div class="container contact">
        <div class="row">
            <div class="col-md-6 info">
                <div class="contact-info">
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image"/>
                    <h3>Colis de : {{ colis.user.username|capitalize }}</h3>
                    <h5>Départ : {{ colis.paysDepart |capitalize}}, {{ colis.villeDepart |capitalize}}</h5>
                    <h5>Arrivée : {{ colis.paysArrive|capitalize }}, {{ colis.villeArrive|capitalize }}</h5>
                    <h5>Date souhaité avant : </h5> {{ colis.dateDep|date('Y-m-d') }}
                    <h5>Poids :</h5>
                            {% if colis.poids == 1 %}
                                <span>Moins de 1kg </span>
                            {% endif %}
                            {% if colis.poids == 3 %}
                                <span>Entre 1kg et 3kg</span>
                            {% endif %}
                            {% if colis.poids == 5 %}
                                <span>Entre 3kg et 5kg</span>
                            {% endif %}
                            {% if colis.poids == 6 %}
                                <span>Plus de 5kg</span>
                            {% endif %}
                    <div>
                        <h5 id="discription"> Discription :</h5> {{ colis.description }}
                    </div>
                </div>
            </div>
            <div class="col-md-6 form">
                <div class="contact-form">
                    <h3> Contacter : {{ colis.user.username }}</h3>
                    <br/>
                    <div class="form-group">
                        <label class="control-label" for="name">Nom & Prénom :</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="fname" placeholder="nom et prénom" name="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="email">Email:</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" placeholder="votre adresse email" name="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="comment">Votre message:</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="5" id="comment"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Envoyer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock body %}